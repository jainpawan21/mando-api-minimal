{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*"],
  "globalEnv": ["*"],
  "tasks": {
    "//#lint": {},
    "//#lint:fix": {
      "cache": false
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**",
        ".vercel/**",
        "build/**"
      ]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },

    "start:worker": {
      "cache": false,
      "persistent": true
    },

    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
